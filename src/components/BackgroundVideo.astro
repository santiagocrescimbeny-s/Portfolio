---
// Componente de video de fondo responsive
interface Props {
  videoPath?: string;
  posterImage?: string;
  useGradient?: boolean;
}

const { 
  videoPath = '/videos/background.mp4',
  posterImage = '/images/poster.jpg',
  useGradient = true
} = Astro.props;
---

<div class="background-wrapper">
  <div class="background-video-container" class:list={{ 'gradient-fallback': useGradient }}>
    {!useGradient && (
      <video
        class="background-video"
        autoplay
        muted
        loop
        playsinline
        poster={posterImage}
      >
        <source src={videoPath} type="video/mp4" />
        Tu navegador no soporta videos HTML5
      </video>
    )}
    <div class="video-overlay"></div>
  </div>
</div>

<style>
  .background-wrapper {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }

  .background-video-container {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: linear-gradient(135deg, #0f0c29 0%, #302b63 100%);
  }

  .background-video-container.gradient-fallback {
    background: linear-gradient(135deg, #0f0c29 0%, #302b63 100%);
  }

  .background-video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
    display: block;
  }

  .video-overlay {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }

  @media (max-width: 768px) {
    .background-video-container {
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }

    .background-video {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .background-video {
      display: none;
    }

    .background-video-container {
      background: linear-gradient(135deg, #0f0c29 0%, #302b63 100%);
    }
  }
</style>
