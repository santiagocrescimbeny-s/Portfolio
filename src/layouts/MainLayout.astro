---
// Plantilla base que envuelve todas las p√°ginas
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackgroundVideo from '../components/BackgroundVideo.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Mi Portafolio', description = 'Bienvenido a mi portafolio' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <!-- Componente de video de fondo (usa gradiente como fallback por defecto) -->
    <BackgroundVideo videoPath="/videos/background.mp4" useGradient={true} />
    
    <Header />
    <main class="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    width: 100%;
    height: 100%;
  }

  html {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #fff;
    background-color: #000;
  }

  body {
    line-height: 1.6;
    background: transparent;
    position: relative;
  }

  .main-content {
    min-height: calc(100vh - 200px);
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 10;
  }

  h1, h2, h3, h4, h5, h6 {
    margin-bottom: 1rem;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.8);
  }

  p {
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
  }

  a {
    color: #007bff;
    text-decoration: none;
    transition: color 0.3s;
  }

  a:hover {
    color: #0099ff;
    text-decoration: underline;
  }

  button {
    cursor: pointer;
  }

  /* Header y Footer con glassmorphism */
  header {
    position: relative;
    z-index: 20;
    background: rgba(26, 26, 26, 0.85);
    backdrop-filter: blur(15px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  footer {
    position: relative;
    z-index: 20;
    background: rgba(26, 26, 26, 0.85);
    backdrop-filter: blur(15px);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>
