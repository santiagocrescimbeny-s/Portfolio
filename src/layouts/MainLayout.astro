---
// Plantilla base que envuelve todas las páginas
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackgroundVideo from '../components/BackgroundVideo.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Mi Portafolio', description = 'Bienvenido a mi portafolio' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <BackgroundVideo videoPath="/videos/background.mp4" />
    <Header />
    <main class="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #fff;
  }

  body {
    line-height: 1.6;
    background: #0a0a0a;
    position: relative;
  }

  .main-content {
    min-height: calc(100vh - 200px);
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 10;
  }

  h1, h2, h3, h4, h5, h6 {
    margin-bottom: 1rem;
  }

  a {
    color: #007bff;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  button {
    cursor: pointer;
  }

  /* Asegurar que Header y Footer estén por encima del video */
  header {
    position: relative;
    z-index: 20;
  }

  footer {
    position: relative;
    z-index: 20;
  }
</style>
